package com.pages.helper;

import com.base.ProjectSpecificMethod;

import io.cucumber.java.en.When;

import org.openqa.selenium.By;

public class EditLeadPage extends ProjectSpecificMethod {
	
	@When("Enter the phone number as {string}")
	public EditLeadPage enterPhno(String phNo) {
		getDriver().findElement(By.xpath("//span[text()='Phone']")).click();
		getDriver().findElement(By.xpath("//input[@name='phoneNumber']")).sendKeys("99");
		return new EditLeadPage();
	}


}
